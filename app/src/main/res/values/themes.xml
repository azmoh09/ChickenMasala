<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ChickenMasala" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_700</item>
        <item name="colorPrimaryVariant">@color/orange_700</item>
        <item name="colorOnPrimary">@color/orange_700</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_600</item>
        <item name="colorSecondaryVariant">@color/orange_600</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="TextTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/txt_white_dark_background</item>
        <item name="android:textSize">@dimen/textXLarge</item>
    </style>

    <style name="TextKitchens">
        <item name="android:layout_marginStart">@dimen/spaceMedium</item>
        <item name="android:layout_marginBottom">@dimen/spaceSmall</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/textXLarge</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextFood">
        <item name="android:layout_marginHorizontal">@dimen/spaceSmall</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/textMedium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>

    <style name="TextSmall">
        <item name="android:ellipsize">middle</item>
        <item name="android:layout_marginStart">@dimen/spaceMedium</item>
        <item name="paddingEnd">@dimen/spaceSmall</item>
        <item name="android:textSize">@dimen/textMedium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:lines">2</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="SearchEdit">
        <item name="android:layout_marginStart">@dimen/spaceLarge</item>
        <item name="android:layout_marginTop">@dimen/spaceMedium</item>
        <item name="android:layout_marginEnd">@dimen/spaceLarge</item>
        <item name="background">@drawable/shape_rounded_search_bar</item>
        <item name="android:drawableStart">@drawable/ic_filter</item>
        <item name="android:drawableEnd">@drawable/ic_search</item>
        <item name="android:drawablePadding">@dimen/spaceMedium</item>
        <item name="android:paddingStart">@dimen/spaceMedium</item>
        <item name="android:paddingEnd">@dimen/spaceMedium</item>
        <item name="android:paddingTop">@dimen/spaceExtraSmall</item>
        <item name="android:paddingBottom">@dimen/spaceExtraSmall</item>
        <item name="android:textSize">@dimen/textMedium</item>
        <item name="android:textColor">@color/orange_400</item>
        <item name="android:textColorHint">@color/orange_400</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">15</item>

    </style>

    <style name="FoodName">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/textLarge</item>
        <item name="android:textColor">@color/txt_white_dark_background</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="TextSubTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textColor">#9A9A9A</item>
        <item name="android:textSize">@dimen/textMedium</item>
    </style>

    <style name="Circle">
        <item name="cornerSize">100dp</item>
    </style>

    <style name="RelativeFoodImage">
        <item name="cornerSize">50dp</item>
    </style>

    <style name="Chip" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="textStartPadding">@dimen/spaceMedium</item>
        <item name="textEndPadding">@dimen/spaceMedium</item>
        <item name="android:textSize">@dimen/textMedium</item>
        <item name="android:textColor">@color/orange_200</item>
        <item name="android:backgroundTint">@color/white</item>

    </style>

    <style name="TextCategory">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textLarge</item>
        <item name="android:background">#00FFFFFF</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="TextCategory.TextCardLarge">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/textXLarge</item>
    </style>

    <style name="TextCategory.TextCardSmall">
        <item name="android:textSize">@dimen/textMedium</item>
    </style>

    <style name="IndianFoodText">
        <item name="android:background">@color/background</item>
        <item name="android:textSize">@dimen/textXLarge</item>
        <item name="android:layout_marginStart">@dimen/spaceMedium</item>
    </style>

    <style name="IndianFoodText.Indian">
        <item name="background">@color/black</item>
        <item name="android:textSize">@dimen/textMedium</item>
        <item name="android:textColor">@color/txt_white_dark_background</item>
    </style>

    <style name="TextKitchenCategory">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/textXLarge</item>
        <item name="android:layout_marginStart">@dimen/spaceMedium</item>
        <item name="android:background">#00FFFFFF</item>
    </style>

    <style name="SeeAll">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/orange_200</item>
        <item name="android:textSize">@dimen/textMedium</item>
    </style>

    <style name="SeeAll.Categories">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/textLarge</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">3</item>
    </style>

    <style name="RecyclerView">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">@dimen/spaceSmall</item>
        <item name="layoutManager">androidx.recyclerview.widget.LinearLayoutManager</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="LinearLayout">
        <item name="android:layout_marginTop">@dimen/spaceXLarge</item>
        <item name="android:layout_marginStart">@dimen/spaceMedium</item>
        <item name="android:layout_marginEnd">@dimen/spaceMedium</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="TextTrivia">
        <item name="android:layout_marginTop">@dimen/spaceMedium</item>
        <item name="android:layout_marginStart">@dimen/spaceLarge</item>
        <item name="android:layout_marginBottom">@dimen/spaceMedium</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/textXLarge</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">bottom|start</item>
        <item name="android:elevation">3dp</item>
        <item name="android:background">#00FFFFFF</item>
    </style>

    <style name="CardViewTrivia">
        <item name="android:layout_marginVertical">@dimen/spaceNormal</item>
        <item name="android:layout_marginHorizontal">@dimen/spaceMedium</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="ViewTrivia">
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:elevation">1dp</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="ImageViewTrivia">
        <item name="android:layout_height">180dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="TextQuestion">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginTop">@dimen/spaceXXXLarge</item>
        <item name="android:layout_marginStart">@dimen/spaceMedium</item>
        <item name="android:layout_marginEnd">@dimen/spaceMedium</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/txt_white_dark_background</item>
        <item name="android:textSize">@dimen/textLarge</item>

    </style>

    <style name="SubmitButton">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginTop">@dimen/spaceXXLarge</item>
        <item name="android:layout_marginStart">@dimen/spaceMedium</item>
        <item name="android:layout_marginEnd">@dimen/spaceMedium</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:background">@drawable/button_with_radius</item>
        <item name="android:textSize">@dimen/textMedium</item>
        <item name="android:text">@string/submit</item>
        <item name="android:textColor">@color/txt_white_dark_background</item>
        <item name="android:backgroundTint">@color/orange_400</item>
    </style>

    <style name="TextAnswers">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/spaceMedium</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/textLarge</item>
        <item name="android:textColor">@color/txt_white_dark_background</item>
        <item name="backgroundTint">#00FFFFFF</item>
    </style>

    <style name="ConstraintLayout">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/backround_card</item>
    </style>

    <style name="cv_guess">
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginStart">@dimen/spaceMedium</item>
        <item name="android:layout_marginTop">@dimen/spaceMedium</item>
        <item name="android:layout_marginEnd">@dimen/spaceMedium</item>
    </style>

    <style name="SplashScreen" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="colorPrimary">@color/orange_700</item>
        <item name="colorPrimaryVariant">@color/orange_700</item>
        <item name="colorOnPrimary">@color/orange_700</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_600</item>
        <item name="colorSecondaryVariant">@color/orange_600</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->


    </style>
</resources>