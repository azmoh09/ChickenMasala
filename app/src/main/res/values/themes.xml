<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ChickenMasala" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_700</item>
        <item name="colorPrimaryVariant">@color/orange_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_600</item>
        <item name="colorSecondaryVariant">@color/orange_600</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="textTitle">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textXLarge</item>
    </style>

    <style name="textTitle.FoodName">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/textLarge</item>
    </style>

    <style name="textSubTitle">
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textColor">#9A9A9A</item>
        <item name="android:textSize">@dimen/textMedium</item>
    </style>

    <style name="circle">
        <item name="cornerSize">100dp</item>
    </style>

    <style name="relativeFoodImage">
        <item name="cornerSize">50dp</item>
    </style>

    <style name="chip" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="textStartPadding">@dimen/spaceMedium</item>
        <item name="textEndPadding">@dimen/spaceMedium</item>
        <item name="android:textSize">@dimen/textMedium</item>
        <item name="android:textColor">@color/orange_200</item>
    </style>
    <style name="textCategory">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textLarge</item>
    </style>
    <style name="textCategory.textCardLarge">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/textXLarge</item>
    </style>
    <style name="textCategory.textCardSmall">
        <item name="android:textSize">@dimen/textMedium</item>
    </style>
    <style name="indian_food_text">
        <item name="android:textColor">@color/orange_200</item>
        <item name="android:textSize">@dimen/textXLarge</item>
        <item name="android:layout_marginStart">@dimen/spaceMedium</item>
    </style>
    <style name="indian_food_text.indian">
        <item name="android:textSize">@dimen/textMedium</item>
    </style>
    <style name="text_Kitchen_category">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/textXLarge</item>
        <item name="android:layout_marginStart">@dimen/spaceMedium</item>
    </style>
    <style name="see_all">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/orange_200</item>
        <item name="android:textSize">@dimen/textMedium</item>
    </style>
    <style name="see_all.categories">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/textLarge</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">3</item>
    </style>
    <style name="RV">
        <item name="android:layout_marginTop">@dimen/spaceLarge</item>
        <item name="android:layout_marginStart">@dimen/spaceMedium</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="linearLayout">
        <item name="android:layout_marginTop">@dimen/spaceXLarge</item>
        <item name="android:layout_marginStart">@dimen/spaceMedium</item>
        <item name="android:layout_marginEnd">@dimen/spaceMedium</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

</resources>