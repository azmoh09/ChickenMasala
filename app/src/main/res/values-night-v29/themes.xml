<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.ChickenMasala" parent="Theme.Material3.Dark">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FFEB3B</item>
        <item name="colorPrimaryVariant">#FFC107</item>
        <item name="colorOnPrimary">#CCFFFFFF</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_600</item>
        <item name="colorSecondaryVariant">@color/orange_600</item>
        <item name="colorOnSecondary">@color/green_100</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#000000</item>
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed">true</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>

    </style>

    <style name="textTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/txt_white_dark_background</item>
        <item name="android:textSize">@dimen/textXLarge</item>
    </style>

    <style name="FoodName">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/textLarge</item>
        <item name="android:textColor">@color/txt_white_dark_background</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="textSubTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textColor">@color/txt_white_dark_background</item>
        <item name="android:textSize">@dimen/textMedium</item>
    </style>

    <style name="circle">
        <item name="cornerSize">100dp</item>
    </style>

    <style name="relativeFoodImage">
        <item name="cornerSize">50dp</item>
    </style>

    <style name="chip" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="textStartPadding">@dimen/spaceMedium</item>
        <item name="textEndPadding">@dimen/spaceMedium</item>
        <item name="android:textSize">@dimen/textMedium</item>
        <item name="android:textColor">@color/orange_200</item>
        <item name="android:backgroundTint">@color/white</item>

    </style>

    <style name="textCategory">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textLarge</item>
        <item name="android:background">#00FFFFFF</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="textCategory.textCardLarge">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/textXLarge</item>
    </style>

    <style name="textCategory.textCardSmall">
        <item name="android:textSize">@dimen/textMedium</item>
    </style>

    <style name="indian_food_text">
        <item name="android:textSize">@dimen/textXLarge</item>
        <item name="android:textColor">@color/txt_white_dark_background</item>
        <item name="android:layout_marginStart">@dimen/spaceMedium</item>
    </style>

    <style name="indian_food_text.indian">

        <item name="android:textSize">@dimen/textMedium</item>
        <item name="android:textColor">@color/txt_white_dark_background</item>
    </style>

    <style name="text_Kitchen_category">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/textXLarge</item>
        <item name="android:layout_marginStart">@dimen/spaceMedium</item>
        <item name="android:background">#00FFFFFF</item>
    </style>

    <style name="see_all">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:color">@color/txt_white_dark_background</item>
        <item name="android:textSize">@dimen/textMedium</item>

    </style>

    <style name="see_all.categories">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/textLarge</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">3</item>
    </style>

    <style name="RV">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">@dimen/spaceSmall</item>
        <item name="layoutManager">androidx.recyclerview.widget.LinearLayoutManager</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="linearLayout">
        <item name="android:layout_marginTop">@dimen/spaceXLarge</item>
        <item name="android:layout_marginStart">@dimen/spaceMedium</item>
        <item name="android:layout_marginEnd">@dimen/spaceMedium</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="textTrivia">
        <item name="android:layout_marginTop">@dimen/spaceMedium</item>
        <item name="android:layout_marginStart">@dimen/spaceLarge</item>
        <item name="android:layout_marginBottom">@dimen/spaceMedium</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/textXLarge</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">bottom|start</item>
        <item name="android:elevation">3dp</item>
        <item name="android:background">#00FFFFFF</item>
    </style>

    <style name="textQuestion">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginTop">@dimen/spaceXXXLarge</item>
        <item name="android:layout_marginStart">@dimen/spaceMedium</item>
        <item name="android:layout_marginEnd">@dimen/spaceMedium</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/txt_white_dark_background</item>
        <item name="android:textSize">@dimen/textLarge</item>

    </style>

    <style name="submitButton">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginTop">@dimen/spaceXXLarge</item>
        <item name="android:layout_marginStart">@dimen/spaceMedium</item>
        <item name="android:layout_marginEnd">@dimen/spaceMedium</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:background">@drawable/button_with_radius</item>
        <item name="android:textSize">@dimen/textMedium</item>
        <item name="android:text">@string/submit</item>
        <item name="android:textColor">@color/txt_white_dark_background</item>
        <item name="android:backgroundTint">@color/orange_400</item>
    </style>

    <style name="textAnswers">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/spaceMedium</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/textLarge</item>
        <item name="android:textColor">@color/txt_white_dark_background</item>
        <item name="backgroundTint">#00FFFFFF</item>
    </style>

    <style name="constraint_layout">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/backround_card</item>
    </style>

    <style name="cv_guess">
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginStart">@dimen/spaceMedium</item>
        <item name="android:layout_marginTop">@dimen/spaceMedium</item>
        <item name="android:layout_marginEnd">@dimen/spaceMedium</item>
    </style>

</resources>