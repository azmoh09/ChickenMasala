<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_200"
    tools:context=".TriviaGamesFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_miniGameOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spaceXLarge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/iv_guess_the_cuisineTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType= "centerCrop"
                android:src="@drawable/guess_the_cuisine" />

            <TextView
                android:id="@+id/tv_gameOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:layout_marginStart="@dimen/spaceLarge"
                android:layout_marginTop="@dimen/spaceMedium"
                android:layout_marginBottom="@dimen/spaceMedium"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/guess_the_ingredient"
                android:textColor="@color/white"
                android:textSize="@dimen/textXLarge"

                />


        </FrameLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_miniGameTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spaceMedium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardview_miniGameOne">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            >

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/iv_guess_the_ingredient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/guess_the_ingredient" />

            <TextView
                android:id="@+id/tv_gameTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:layout_marginStart="@dimen/spaceLarge"
                android:layout_marginTop="@dimen/spaceMedium"
                android:layout_marginBottom="@dimen/spaceMedium"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/guess_the_cuisine"
                android:textColor="@color/white"
                android:textSize="@dimen/textXLarge"

                />


        </FrameLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_miniGameThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spaceMedium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardview_miniGameTwo">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/iv_guess_the_Meal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/guess_the_meal" />

            <TextView
                android:id="@+id/tv_gameThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:layout_marginStart="@dimen/spaceLarge"
                android:layout_marginTop="@dimen/spaceMedium"
                android:layout_marginBottom="@dimen/spaceMedium"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/guess_the_meal"
                android:textColor="@color/white"
                android:textSize="@dimen/textXLarge"

                />


        </FrameLayout>


    </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>