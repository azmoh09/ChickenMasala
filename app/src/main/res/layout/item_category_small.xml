<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/widthCategoryItem"
    android:layout_height="@dimen/heightCategoryItem"
    android:layout_marginHorizontal="@dimen/spaceSmall"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/spaceSmall">

    <ImageView
        android:id="@+id/category_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/category_food"
        android:scaleType="centerCrop"
        android:src="@drawable/card_large_categories" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_shadow" />

    <TextView
        android:id="@+id/category_title"
        style="@style/TextCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingHorizontal="@dimen/spaceExtraSmall"
        android:text="@string/content"
        android:textSize="@dimen/textSmall" />
</androidx.cardview.widget.CardView>