<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/spaceSmall"
    android:layout_marginHorizontal="@dimen/spaceMedium"
    android:background="@color/white"
    app:cardCornerRadius="@dimen/spaceSmall"
    app:cardElevation="@dimen/spaceSmall"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|clip_horizontal"
        android:background="@color/gray_300"
        android:orientation="horizontal">

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/imageview_indian_food_first_item"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="start"
            android:layout_marginVertical="@dimen/spaceExtraSmall"
            android:layout_marginStart="@dimen/spaceExtraSmall"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:roundPercent="1"
            tools:src="@drawable/img_card_food" />

        <TextView
            android:id="@+id/textview_recipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spaceSmall"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/masala_karela_recipe"
            android:textColor="@color/black"
            android:textSize="@dimen/textMedium"
            app:layout_constraintBottom_toBottomOf="@+id/imageview_indian_food_first_item"
            app:layout_constraintStart_toEndOf="@+id/imageview_indian_food_first_item"
            app:layout_constraintTop_toTopOf="@+id/imageview_indian_food_first_item"
            app:layout_constraintVertical_bias="0.23000002" />

        <TextView
            android:id="@+id/textview_recipeCuisine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spaceSmall"
            android:fontFamily="@font/roboto_bold"
            android:textSize="@dimen/textMedium"
            app:layout_constraintEnd_toEndOf="@+id/textview_recipe"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textview_recipe"
            app:layout_constraintTop_toBottomOf="@+id/textview_recipe"
            tools:text="@string/cuisine" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>



