<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="200dp"
    android:layout_margin="@dimen/spaceSmall"
    android:layout_marginEnd="@dimen/spaceSmall"
    app:cardCornerRadius="@dimen/spaceSmall"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_gravity="center_vertical|clip_horizontal"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_category_food"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/tamil_food_picture" />

        <TextView
            android:id="@+id/text_category_food"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spaceSmall"
            android:lines="2"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/spaceSmall"
            android:layout_marginBottom="@dimen/spaceSmall"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/masala_karela_recipe"
            android:textSize="@dimen/textMedium" />
    </LinearLayout>
</androidx.cardview.widget.CardView>

