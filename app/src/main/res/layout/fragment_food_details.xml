<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageview"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/ic_launcher_background"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvFoodName"
            style="@style/textTitle"
            android:ellipsize="end"
            android:lines="1"
            android:text="@string/chicken_frid_rice"
            android:layout_marginTop="@dimen/spaceXLarge"
            android:layout_marginStart="@dimen/spaceSmall"
            android:layout_marginEnd="@dimen/spaceSmall"/>

        <TextView
            android:id="@+id/tvFoodDetailName"
            style="@style/textSubTitle"
            android:layout_marginTop="@dimen/spaceSmall"
            android:text="@string/chicken_frid_rice"
            android:layout_marginStart="@dimen/spaceSmall"
            android:layout_marginEnd="@dimen/spaceSmall"/>

        <TextView
            android:id="@+id/category_text"
            style="@style/textTitle"
            android:layout_marginTop="@dimen/spaceLarge"
            android:ellipsize="end"
            android:lines="1"
            android:text="@string/description"
            android:layout_marginStart="@dimen/spaceSmall"
            android:layout_marginEnd="@dimen/spaceSmall"/>

        <TextView
            android:id="@+id/tvFoodDescription"
            style="@style/textSubTitle"
            android:layout_marginTop="@dimen/spaceSmall"
            android:text="@string/chicken_frid_rice"
            android:layout_marginStart="@dimen/spaceSmall"
            android:layout_marginEnd="@dimen/spaceSmall"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>