<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/spaceXLarge"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textXLarge"
                android:textColor="@color/orange_200"
                android:text="@string/titleOne"
                android:layout_marginStart="@dimen/spaceMedium"
                android:background="@color/gray_300"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/blockOne"
                android:textColor="@color/orange_200"
                android:textSize="@dimen/textMedium"
                android:layout_margin="@dimen/spaceMedium"
                android:layout_marginStart="@dimen/spaceMedium"
                android:layout_marginTop="@dimen/spaceSmall"/>



            <TextView
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textXLarge"
                android:textColor="@color/orange_200"
                android:text="@string/titleTwo"
                android:layout_marginStart="@dimen/spaceMedium"
                android:background="@color/gray_300"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/blockTwo"
                android:textColor="@color/orange_200"
                android:textSize="@dimen/textMedium"
                android:layout_margin="@dimen/spaceMedium"
                android:layout_marginStart="@dimen/spaceMedium"
                android:layout_marginTop="@dimen/spaceSmall"/>
            
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:background="@color/gray_300"
                    />

                <androidx.constraintlayout.utils.widget.ImageFilterView
                    android:layout_marginTop="@dimen/spaceMedium"
                    android:layout_marginStart="@dimen/spaceMedium"
                    android:layout_marginEnd="@dimen/spaceMedium"
                    android:layout_width="380dp"
                    app:roundPercent="0.2"
                    android:elevation="1dp"
                    android:layout_height="255dp"
                    android:src="@drawable/indian_meal"/>

            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textXLarge"
                android:textColor="@color/orange_200"
                android:text="@string/titleThree"
                android:layout_marginStart="@dimen/spaceMedium"
                android:background="@color/gray_300"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/blockThree"
                android:textColor="@color/orange_200"
                android:textSize="@dimen/textMedium"
                android:layout_margin="@dimen/spaceMedium"
                android:layout_marginStart="@dimen/spaceMedium"
                android:layout_marginTop="@dimen/spaceSmall"/>

            <TextView
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textXLarge"
                android:textColor="@color/orange_200"
                android:text="@string/titleFour"
                android:layout_marginStart="@dimen/spaceMedium"
                android:background="@color/gray_300"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/blockFour"
                android:textColor="@color/orange_200"
                android:textSize="@dimen/textMedium"
                android:layout_margin="@dimen/spaceMedium"
                android:layout_marginStart="@dimen/spaceMedium"
                android:layout_marginTop="@dimen/spaceSmall"
                android:layout_marginBottom="@dimen/spaceMedium"
                />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>