<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginVertical="4dp"
    android:clickable="true"
    android:focusable="true"

    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/spaceSmall">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_300"
        android:backgroundTint="@color/background_card">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/recipe_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginVertical="@dimen/spaceExtraSmall"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/img_card_food" />

        <TextView
            android:id="@+id/recipe_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/spaceNormal"
            android:layout_marginVertical="@dimen/spaceNormal"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_bold"
            android:lines="2"
            android:text="@string/masala_karela_recipe"
            android:textColor="@color/txt_white_dark_background"
            android:textSize="@dimen/textMedium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/recipe_image"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/recipe_cuisine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spaceSmall"
            android:fontFamily="@font/roboto_bold"
            android:textColor="#C74F4A45"
            android:textSize="@dimen/textMedium"
            android:layout_marginBottom="@dimen/spaceNormal"
            android:layout_marginStart="@dimen/spaceNormal"
            app:layout_constraintStart_toEndOf="@id/recipe_image"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="@string/cuisine" />
        <TextView
            android:id="@+id/time_to_prepare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:textSize="@dimen/textSmall"
            android:paddingHorizontal="@dimen/spaceSmall"
            android:paddingVertical="@dimen/spaceExtraSmall"
            android:text="@string/_2_mins"
            android:background="@drawable/shape_rounded_search_bar"
            android:backgroundTint="@color/light_purple"
            android:drawablePadding="@dimen/spaceExtraSmall"
            app:layout_constraintEnd_toEndOf="@+id/recipe_title"
            app:layout_constraintTop_toTopOf="@id/recipe_cuisine"
            app:layout_constraintBottom_toBottomOf="@id/recipe_cuisine"
            tools:text="2 mins"
            app:drawableStartCompat="@drawable/baseline_access_time_24" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
