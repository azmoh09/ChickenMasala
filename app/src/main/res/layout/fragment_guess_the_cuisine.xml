<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="@color/background"
    tools:context=".GuessTheCuisineFragment">

    <TextView
        android:id="@+id/textView_question"
        style="@style/textQuestion"
        android:text="@string/questionText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/white_txt_dark"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/answerOne"
        style="@style/cv_guess"
        android:layout_marginTop="@dimen/spaceXLarge"
        app:cardCornerRadius="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_question">

        <androidx.constraintlayout.widget.ConstraintLayout style="@style/constraint_layout">

            <TextView
                android:id="@+id/textview_answer_one_cuisine"
                style="@style/textAnswers"
                android:text="@string/answerOne"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/answerTwo"
        style="@style/cv_guess"
        app:cardCornerRadius="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answerOne">

        <androidx.constraintlayout.widget.ConstraintLayout style="@style/constraint_layout">

            <TextView
                android:id="@+id/textview_answer_two_cuisine"
                style="@style/textAnswers"
                android:text="@string/answerTwo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/answerThree"
        style="@style/cv_guess"
        app:cardCornerRadius="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answerTwo">

        <androidx.constraintlayout.widget.ConstraintLayout style="@style/constraint_layout">

            <TextView
                android:id="@+id/textview_answer_three_cuisine"
                style="@style/textAnswers"
                android:text="@string/answerThree"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/answerFour"
        style="@style/cv_guess"
        app:cardCornerRadius="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answerThree">

        <androidx.constraintlayout.widget.ConstraintLayout style="@style/constraint_layout">

            <TextView
                android:id="@+id/textview_answer_four_cuisine"
                style="@style/textAnswers"
                android:text="@string/answerFour"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/submitButton"
        style="@style/submitButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answerFour" />
</androidx.constraintlayout.widget.ConstraintLayout>